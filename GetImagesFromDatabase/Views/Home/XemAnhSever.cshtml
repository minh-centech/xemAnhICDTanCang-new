    <div class="container mt-5">
        <div class="row">
            @foreach (var file in Model.ImageData)
            {
                <div class="col-sm-4">
                    <div class="card" style="width: 18rem;">
                        <img style="width:100%;cursor:pointer" onclick="onClick(this)" src="@file" class="card-img-top" id="myImg" />
                        <div class="card-body">
                            <h5 class="card-title">Ảnh chi tiết</h5>
                        </div>
                    </div>
                </div>
            }
        </div>

    </div>
    <div class="container">
        <div id="modal01" class="w3-modal" onclick="this.style.display='none'">
            <span class="w3-button w3-hover-red w3-xlarge w3-display-topright">&times;</span>
            <div class="w3-modal-content w3-animate-zoom">
                <img id="img01" style="width:100%;" alt="Zoom Image">
            </div>
        </div>
    </div>
    <script>function onClick(element) {
            document.getElementById("img01").src = element.src;
            document.getElementById("modal01").style.display = "block";
            document.getElementById("img01").addEventListener("click", function () {
                // Khi ảnh được click, thực hiện chức năng zoom
                this.classList.toggle("zoomed");
            });
}
